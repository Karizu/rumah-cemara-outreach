<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_article"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardViewRequest"
        android:layout_width="match_parent"
        android:fontFamily="@font/quicksand"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:theme="@style/quicksandTheme"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvServiceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Biomedical Appointment"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvUpdateAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30 Agustus 2018"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jl. Batik Saketi No. 7"
                    android:textSize="11sp"/>

            </LinearLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>