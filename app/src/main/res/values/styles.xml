<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/sf_pro_display</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="quicksandTheme">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:textColor">@color/NormalColorText</item>
    </style>

    <style name="sfDisplayFont">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/sf_pro_display</item>
        <item name="android:textColor">@color/NormalColorText</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Theme.Transparent" parent="Base.Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/quicksand</item>
    </style>

    <style name="Base.Theme.AppCompat.Transculent" parent="Base.V7.Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in_center</item>
        <item name="android:windowExitAnimation">@anim/activity_translucent_open_enter</item>
    </style>

    <style name="SignUpTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#8E8E93</item>
        <item name="android:textColorHint">@color/DarkGray</item>
        <item name="boxStrokeWidth">0.2dp</item>
    </style>
    <style name="SignUpTextInputLayoutTheme" parent="TextAppearance.AppCompat">
        <item name="android:paddingLeft">@dimen/appbar_padding_top</item>
        <item name="android:paddingRight">@dimen/appbar_padding_top</item>
        <item name="android:layout_marginBottom">@dimen/appbar_padding_top</item>
        <item name="android:layout_marginTop">@dimen/appbar_padding_top</item>
    </style>
    <style name="Base.ThemeOverlay.AppCompat.navTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/FocusColorText</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/White</item>

    </style>

    <style name="loginInputStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/DarkGray</item>
        <item name="colorControlActivated">@color/DarkOrange</item>
        <item name="colorControlHighlight">@color/DarkOrange</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:textColor">@drawable/edit_text_color</item>
        <item name="android:textColorHighlight">@color/Blue</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>
    <style name="loginInputTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/DarkGray</item>
        <item name="colorControlActivated">@color/DarkOrange</item>
        <item name="colorControlHighlight">@color/DarkOrange</item>
        <item name="android:textColorHint">@color/DarkGray</item>
    </style>

</resources>
